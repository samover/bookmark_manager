<!DOCTYPE html>

<html>
  <head>
    <title>Bookmark Manager v2.0</title>
  </head>

  <body>
    <% if current_user %>
      Welcome <%= current_user.username %>!
    <% end %>
    <% if flash[:errors] %>
      <div id='error'>
        <p>Oops. Something went wrong: </p>
        <ul>
          <% flash[:errors].each do |error| %>
          <li><%= error %></li> 
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
